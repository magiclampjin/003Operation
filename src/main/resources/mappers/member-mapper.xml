<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Member">
	<select id="idDuplicationCheck" resultType="Boolean">
		select count(*) from member where id like #{id};
	</select>
	
	<select id="chkInfo" resultType="Boolean">
		select count(*) from member where id = #{id} and pw = #{pw};
	</select>

	<insert id="signupUser">
	
	</insert>
	
	<select id="selectInfoById" resultType="com.operation.dto.MemberDTO">
		select * from member where id = #{id};
	</select>
	
	<select id="selectByNickname" resultType="Boolean">
		select count(*) from member where nickname = #{nickname};
	</select>
</mapper>